<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:background="@color/MINIMAL"
                android:padding="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/iv_profile_by_noti"
                    android:layout_width="88dp"
                    android:layout_height="90dp"
                    android:layout_alignParentEnd="true"
                    app:cardBackgroundColor="@android:color/darker_gray"
                    app:cardCornerRadius="45dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/iv_pic_by_noti"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:id="@+id/img_profile_single"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_person_24" />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_name_single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/amaranth"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_profile_address"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_profile_by_noti"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_profile_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingLeft="15dp"
                    android:text="Address"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_profile_contact"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_profile_by_noti"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name_single" />

                <TextView
                    android:id="@+id/tv_profile_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingLeft="15dp"
                    android:text="Contact No."
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_profile_by_noti"
                    app:layout_constraintTop_toBottomOf="@+id/tv_profile_address" />

                <TextView
                    android:id="@+id/tv_profile_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingLeft="15dp"
                    android:text="Age"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_profile_by_noti"
                    app:layout_constraintTop_toBottomOf="@+id/tv_profile_contact" />

                <TextView
                    android:id="@+id/tv_profile_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingLeft="15dp"
                    android:text="Gender:"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/iv_profile_by_noti"
                    app:layout_constraintTop_toBottomOf="@+id/tv_profile_age" />

                <Button
                    android:id="@+id/btn_profile_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/darkbrown"
                    android:fontFamily="@font/amaranth"
                    android:text="Edit"
                    android:textSize="12sp"
                    app:cornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_profile_by_noti" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_farmlandArea__single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingLeft="10dp"
                    android:text="Farm Area"
                    android:textColor="#A6A29F"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_contact_notification10"
                    app:layout_constraintTop_toBottomOf="@+id/tv_farmlandBudget_single" />

                <TextView
                    android:id="@+id/tv_farmlandAddress_single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingLeft="10dp"
                    android:text="Address"
                    android:textColor="#A6A29F"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_contact_notification8"
                    app:layout_constraintTop_toBottomOf="@+id/tv_farmlandName_single" />

                <TextView
                    android:id="@+id/tv_farmlandBudget_single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingLeft="10dp"
                    android:text="Farm Budget"
                    android:textColor="#A6A29F"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_contact_notification9"
                    app:layout_constraintTop_toBottomOf="@+id/tv_farmlandAddress_single" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_land_title"
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_farmland_single"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/logoback"
                        tools:srcCompat="@drawable/logoback" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="99dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/amaranth"
                    android:text="Farmland Infromation"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_editFarmland_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/darkbrown"
                    android:fontFamily="@font/amaranth"
                    android:text="Edit"
                    android:textSize="12sp"
                    app:cornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" />

                <TextView
                    android:id="@+id/tv_farmlandName_single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingLeft="10dp"
                    android:text="Farmland Name"
                    android:textColor="#A6A29F"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_address_notification4"
                    app:layout_constraintTop_toBottomOf="@+id/cv_land_title" />

                <TextView
                    android:id="@+id/tv_address_notification4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:text="Farmland Name:"
                    android:textColor="@color/darkbrown"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_farmlandName_single"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cv_land_title" />

                <TextView
                    android:id="@+id/tv_contact_notification8"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:text="Address:"
                    android:textColor="@color/darkbrown"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_farmlandAddress_single"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_address_notification4" />

                <TextView
                    android:id="@+id/tv_contact_notification9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:text="Farm Budget:"
                    android:textColor="@color/darkbrown"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_farmlandBudget_single"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contact_notification8" />

                <TextView
                    android:id="@+id/tv_contact_notification10"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:text="Farm Area:"
                    android:textColor="@color/darkbrown"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_farmlandArea__single"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contact_notification9" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/darkbrown"
                    android:fontFamily="@font/amaranth"
                    android:text="Add"
                    android:textSize="12sp"
                    app:cornerRadius="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/recyclerView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView17" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amaranth"
                    android:text="Activities Albums"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/button3"
                    tools:layout_editor_absoluteX="0dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>