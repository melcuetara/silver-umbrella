<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardBackgroundColor="#FAF6F6"
    app:cardCornerRadius="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_farmlandArea__single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingLeft="10dp"
                    android:text="Farm Area"
                    android:textColor="#A6A29F"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_contact_notification10"
                    app:layout_constraintTop_toBottomOf="@+id/tv_farmlandBudget_single" />

                <TextView
                    android:id="@+id/tv_farmlandAddress_single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingLeft="10dp"
                    android:text="Address"
                    android:textColor="#A6A29F"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_contact_notification8"
                    app:layout_constraintTop_toBottomOf="@+id/tv_farmlandName_single" />

                <TextView
                    android:id="@+id/tv_farmlandBudget_single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingLeft="10dp"
                    android:text="Farm Budget"
                    android:textColor="#A6A29F"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_contact_notification9"
                    app:layout_constraintTop_toBottomOf="@+id/tv_farmlandAddress_single" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_land_title"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_farmland_single"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/logoback"
                        tools:srcCompat="@drawable/logoback" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="99dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/amaranth"
                    android:text="Farmland Infromation"
                    android:textColor="@color/darkbrown"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_editFarmland_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/darkbrown"
                    android:fontFamily="@font/amaranth"
                    android:text="Edit"
                    android:textSize="12sp"
                    app:cornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" />

                <TextView
                    android:id="@+id/tv_farmlandName_single"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingLeft="10dp"
                    android:text="Farmland Name"
                    android:textColor="#A6A29F"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_address_notification4"
                    app:layout_constraintTop_toBottomOf="@+id/cv_land_title" />

                <TextView
                    android:id="@+id/tv_address_notification4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:text="Farmland Name:"
                    android:textColor="@color/darkbrown"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_farmlandName_single"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cv_land_title" />

                <TextView
                    android:id="@+id/tv_contact_notification8"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:text="Address:"
                    android:textColor="@color/darkbrown"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_farmlandAddress_single"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_address_notification4" />

                <TextView
                    android:id="@+id/tv_contact_notification9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:text="Farm Budget:"
                    android:textColor="@color/darkbrown"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_farmlandBudget_single"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contact_notification8" />

                <TextView
                    android:id="@+id/tv_contact_notification10"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:text="Farm Area:"
                    android:textColor="@color/darkbrown"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_farmlandArea__single"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contact_notification9" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <Button
                    android:id="@+id/btn_delete_single"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:backgroundTint="#DC5D5D"
                    android:fontFamily="@font/amaranth"
                    android:text="Delete"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:cornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_user_type_report" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>