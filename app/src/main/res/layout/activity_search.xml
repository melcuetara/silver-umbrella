<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:padding="20dp">

    <CheckBox
        android:id="@+id/cb_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_budget_max_layout"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_notification3" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_area_min_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:enabled="false"
        android:hint="Min"
        app:boxStrokeColor="@color/darkbrown"
        app:endIconTint="@color/darkbrown"
        app:errorEnabled="true"
        app:hintTextColor="@color/darkbrown"
        app:layout_constraintEnd_toStartOf="@+id/et_area_max_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_notification4"
        app:startIconTint="@color/darkbrown">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_area_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTint="@color/darkbrown"
            android:fontFamily="@font/amaranth"
            android:inputType="numberDecimal"
            android:textColor="@color/darkbrown"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_area_max_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:enabled="false"
        android:hint="Max"
        app:boxStrokeColor="@color/darkbrown"
        app:endIconTint="@color/darkbrown"
        app:errorEnabled="true"
        app:hintTextColor="@color/darkbrown"
        app:layout_constraintEnd_toStartOf="@+id/cb_area"
        app:layout_constraintStart_toEndOf="@+id/et_area_min_layout"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_notification4"
        app:startIconTint="@color/darkbrown">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_area_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTint="@color/darkbrown"
            android:fontFamily="@font/amaranth"
            android:inputType="numberDecimal"
            android:textColor="@color/darkbrown"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_budget_min_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginEnd="10dp"
        android:enabled="false"
        android:hint="Min"
        app:boxStrokeColor="@color/darkbrown"
        app:endIconTint="@color/darkbrown"
        app:errorEnabled="true"
        app:hintTextColor="@color/darkbrown"
        app:layout_constraintEnd_toStartOf="@+id/et_budget_max_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_notification3"
        app:startIconTint="@color/darkbrown">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_budget_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTint="@color/darkbrown"
            android:fontFamily="@font/amaranth"
            android:inputType="numberDecimal"
            android:textColor="@color/darkbrown"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_budget_max_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:enabled="false"
        android:hint="Max"
        app:boxStrokeColor="@color/darkbrown"
        app:endIconTint="@color/darkbrown"
        app:errorEnabled="true"
        app:hintTextColor="@color/darkbrown"
        app:layout_constraintEnd_toStartOf="@+id/cb_budget"
        app:layout_constraintStart_toEndOf="@+id/et_budget_min_layout"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_notification3"
        app:startIconTint="@color/darkbrown">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_budget_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTint="@color/darkbrown"
            android:fontFamily="@font/amaranth"
            android:inputType="numberDecimal"
            android:textColor="@color/darkbrown"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_name_notification3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/amaranth"
        android:text="Farming Budget:"
        android:textColor="@color/darkbrown"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_budget_min_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_area_min_layout" />

    <Button
        android:id="@+id/btn_filter"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:backgroundTint="@color/darkbrown"
        android:fontFamily="@font/amaranth"
        android:text="Search"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_keyword"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_notification4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/amaranth"
        android:text="Area Size"
        android:textColor="@color/darkbrown"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_area_min_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_keyword" />

    <EditText
        android:id="@+id/et_keyword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:drawablePadding="5dp"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:textColor="@color/darkbrown"
        android:textColorHint="@color/darkbrown"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toStartOf="@+id/btn_filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <CheckBox
        android:id="@+id/cb_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_area_max_layout"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_notification4" />
</androidx.constraintlayout.widget.ConstraintLayout>